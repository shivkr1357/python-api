# Example terraform.tfvars file for PDF Unlock API
# Copy this file to terraform.tfvars and modify the values as needed

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "pdf-unlock-api"
environment  = "dev"

# EC2 Instance Configuration
instance_type     = "t3.micro"  # Free tier eligible
key_pair_name     = "your-key-pair-name"  # REQUIRED: Create this in AWS Console
root_volume_size  = 20

# Network Configuration
vpc_cidr        = "10.0.0.0/16"
az_count        = 2
allowed_ssh_cidrs = [
  "YOUR_IP_ADDRESS/32",  # Replace with your IP address
  "10.0.0.0/8"          # Allow access from VPC
]

# Logging and Monitoring
log_retention_days = 30
enable_monitoring  = false

# Backup Configuration
create_backup_bucket = false
enable_backup        = false
backup_schedule      = "0 2 * * *"  # Daily at 2 AM
backup_retention_days = 30

# Auto Scaling (for production)
enable_auto_scaling = false
min_size           = 1
max_size           = 3
desired_capacity   = 1

# SSL Configuration (for production)
enable_ssl        = false
domain_name       = ""
certificate_arn   = ""

# Additional Tags
tags = {
  Owner       = "Your Name"
  Department  = "Engineering"
  CostCenter  = "12345"
  Environment = "Development"
}

# Example for production environment:
# environment = "prod"
